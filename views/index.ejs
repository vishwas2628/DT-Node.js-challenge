<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Home</title>
</head>
<body>
    <h1>All Events List</h1>
    <a href="/api/v3/app/events/new" class="btn btn-outline-secondary">Add new Events</a>
    <div class="d-flex flex-row mb-3 p-3 flex-wrap gap-3">
        <% for(events of allEvents){ %>
            <div class="card mb-3" style="width: 18rem;">
                <div class="card-body mb-3">
                    <a href="/api/v3/app/events/<%= events._id %>"><h5 class="card-title">Name of Events: <%= events.title %></h5></a>
                    <h6 class="card-subtitle mb-2 text-body-secondary">Tagline: <%= events.tagline %></h6>
                    <p class="card-text">Description:&nbsp; <%= events.description %></p>
                    <p class="card-text">Schedule: <%= events.date %></p>
                    <p class="card-text">Category: <%= events.category %></p>
                    <p class="card-text">Sub-category: <%= events.sub_category %></p>
                    <p class="card-text">Rigor Rank: <%= events.rigor_rank %></p>
                    <p class="card-text">Moderator: <%= events.moderator_name %></p>
                </div>
            </div>
            
        <% } %>
    </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>

