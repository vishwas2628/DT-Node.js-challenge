<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>View event</title>
</head>
<body>
    <h1>Event</h1>
    <div class="d-flex flex-row mb-3 p-3">
        <div class="card mb-3" style="width: 18rem;">
            <div class="card-body mb-3 ">
                <h5 class="card-title">Name of Events:&nbsp;<%= events.title %></h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">Tagline:&nbsp;<%= events.tagline %></h6>
                <p class="card-text">Description:&nbsp;<%= events.description %></p>
                <p class="card-text">Schedule:&nbsp;<%= events.date %></p>
                <p class="card-text">category:&nbsp;<%= events.catagory %></p>
                <p class="card-text">sub_category:&nbsp;<%= events.sub_caorytag %></p>
                <p class="card-text">riger_rank:&nbsp;<%= events.rigor_rank %></p>
                <p class="card-text">Moderator:&nbsp;<%= events.Moderator_Name %></p>
            </div>
        </div>

    </div>
    <form action="/api/v3/app/events/<%= event._id %>?_method=delete" method="post">
        <button class="btn btn-outline-danger">Delete</button>
    </form>  
    <a href="/api/v3/app" class="btn btn-outline-secondary">home</a>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>  
</body>
</html>